<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
    <msapplication>
        <tile>
            <square70x70logo src="/manifest/icons/icon-72x72.png"/>
            <square150x150logo src="/manifest/icons/icon-152x152.png"/>
            <square310x310logo src="/manifest/icons/icon-384x384.png"/>
            <wide310x150logo src="/manifest/icons/wide-310x150.png"/>
            <TileColor>#3B82F6</TileColor>
        </tile>
        <badge>
            <polling-uri src="/api/notifications/count"/>
            <frequency>30</frequency>
        </badge>
        <notification>
            <polling-uri src="/api/notifications/latest"/>
            <polling-uri2 src="/api/notifications/priority"/>
            <frequency>30</frequency>
        </notification>
    </msapplication>
</browserconfig>